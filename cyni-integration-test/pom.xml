	<!--<version>${cyni.app.version}</version>-->
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven-surefire-plugin.version}</version>
				<configuration>
					<systemProperties>
						<property>
							<name>cytoscape.api.version</name>
							<value>${cytoscape.api.version}</value>
						</property>
						<property>
							<name>cytoscape.impl.version</name>
							<value>${cytoscape.core.version}</value>
						</property>
						<property>
							<name>cyni.impl.version</name>
							<value>${cyni.app.version}</value>
						</property>
						<property>
							<name>cyni.api.version</name>
							<value>${cyni.api.version}</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${maven-dependency-plugin.version}</version>
				<executions>
					
					<execution>
						<id>copy-dependencies</id>
						<phase>generate-test-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
 							<artifactItems>
 								<artifactItem>
									<groupId>org.cytoscape</groupId>
									<artifactId>app-impl</artifactId>
									<version>${cytoscape.core.version}</version>
									<type>jar</type>
									<outputDirectory>target/dependencies</outputDirectory>
 								</artifactItem>
 								<artifactItem>
									<groupId>org.cytoscape</groupId>
									<artifactId>cyni-app</artifactId>
									<version>${cyni.app.version}</version>
									<type>jar</type>
									<outputDirectory>target/dependencies</outputDirectory>
 								</artifactItem>
 							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack-api-docs</id>
						<phase>generate-test-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
 							<artifactItems>
 								<artifactItem>
									<groupId>org.cytoscape</groupId>
									<artifactId>swing-app-api</artifactId>
									<version>${cytoscape.api.version}</version>
									<includes>package-list</includes>
									<type>javadoc</type>
									<outputDirectory>target/dependencies</outputDirectory>
 								</artifactItem>
 							</artifactItems>
						</configuration>
					</execution>
					
				</executions>
			</plugin>
		</plugins>
	</build>

